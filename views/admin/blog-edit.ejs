<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12 mt-3">
          <form action="/admin/blog/create" method="POST">
            <input type="hidden" name="blogId" value="<%= blog.blogId %>" />
            <div class="row mb-3">
              <label for="baslik" class="col-sm-2 col-form-label">Header</label>
              <div class="col-sm-8">
                <label></label>
                <input
                  type="text"
                  class="form-control"
                  id="baslik"
                  name="baslik"
                  placeholder="Enter header"
                  value="<%= blog.title %>"
                />
              </div>
            </div>
            <div class="row mb-3">
              <label for="aciklama" class="col-sm-2 col-form-label"
                >Descraption</label
              >
              <div class="col-sm-8">
                <textarea
                  id="aciklama"
                  name="aciklama"
                  class="form-control"
                  rows="10"
                >
<%= blog.description %></textarea
                >
              </div>
            </div>
            <div class="row mb-3">
              <label for="resim" class="col-sm-2 col-form-label">Ä°mage</label>
              <div class="col-sm-8">
                <input
                  type="text"
                  class="form-control"
                  id="resim"
                  name="resim"
                  placeholder="Enter image filename"
                  value="<%= blog.blogimage %>"
                />
              </div>
            </div>
            <div class="row mb-3">
              <label for="kategori" class="col-sm-2 col-form-label">Page</label>
              <div class="col-sm-8">
                <select name="kategori" id="kategori" class="form-select">
                  <option name="kategori" value="-1">Select Page</option>
                  <% categories.forEach(category => { %> <% if
                  (category.categoryId == blog.categoryId) { %>
                  <option value="<%= category.categoryId %>" selected>
                    <%= category.categoryName %>
                  </option>
                  <% } else { %>
                  <option value="<%= category.categoryId %>">
                    <%= category.categoryName %>
                  </option>
                  <% } %> <% }) %>
                </select>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-8 offset-sm-2">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="Anasayfa"
                  name="Anasayfa" <%= blog.mainpage ? "checked" : "" %> />
                  <label class="form-check-label" for="Anasayfa"
                    >Main Page</label
                  >
                </div>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-8 offset-sm-2">
                <button type="submit" class="btn btn-primary">Edit Blog</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
